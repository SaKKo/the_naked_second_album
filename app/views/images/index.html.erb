<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.description %></td>
        <td><%= image.album %></td>
        <td><%= link_to 'Show', [@album,image] %></td>
        <td><%= link_to 'Edit', edit_album_image_path(album_id: @album.id , id: image.id) %></td>
        <td><%= link_to 'Destroy', [@album, image], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_album_image_path(album_id: @album.id) %>
